---
import React, { useState } from 'react';

import { Bars3Icon } from '@heroicons/react/24/outline'
import { IconBrandInstagram, IconBrandFacebook, IconMail } from '@tabler/icons-react';

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
const baseUrl = import.meta.env.BASE_URL;

const emailLink = "mailto:talullabowyer0@gmail.com?subject=Tattoo%20Request"
const instagramUrl = "https://instagram.com/tattoosbytalulla"
const facebookUrl = "#"

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Talulla Bowyer</title>
	</head>
	<body>
		<div id="mobile-menu" class=" absolute z-50 h-screen w-96 bg-gray-100 hidden">
			<div class="w-full flex flex-col text-xl p-4 h-full" >
				<div class="top-0 left-full flex ">
					<button id="menu-close" type="button" >
					<span class="sr-only">Close sidebar</span> <svg class="h-6 w-6 text-black" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path></svg>
					</button>

					<div class="flex grow justify-end items-center px-4">
						<div class="flex space-x-2">
							<a class={currentPath === "" ? "text-black" : ""} href={instagramUrl}>
								<IconBrandInstagram class="size-12 text-black" />
							</a>
							<a class={currentPath === "" ? "text-black" : ""} href={facebookUrl}>
								<IconBrandFacebook class="size-12 text-black" />
							</a>
							<a class={currentPath === "" ? "text-black" : ""} href={emailLink}>
								<IconMail class="size-12 text-black" />
							</a>
						</div>
					</div>
				</div>

				<div class="flex flex-col py-4 grow">
					<a class={currentPath === "" ? "text-black" : ""} href={new URL(baseUrl, Astro.url).pathname}>Home</a>
					<a class={currentPath === "bio" ? "text-black" : ""} href={new URL(baseUrl + '/bio', Astro.url).pathname}>Bio</a>
					<a class={currentPath === "contact" ? "text-black" : ""} href={new URL(baseUrl + '/contact', Astro.url).pathname}>Contact</a>
				</div>

				


			</div>
		</div>
		<div id="main-container" class="relative flex  flex-col min-h-screen">
			
			<header class="sticky top-0 z-40  ">
			    <div class="devktop-nav flex w-full p-4 bg-white">
					<div class="hidden w-1/3 items-center space-x-4 text-sm text-gray-500 md:flex">
						<a class={currentPath === "" ? "text-black" : ""} href={new URL(baseUrl, Astro.url).pathname}>Home</a>
						<a class={currentPath === "bio" ? "text-black" : ""} href={new URL(baseUrl + '/bio', Astro.url).pathname}>Bio</a>
						<a class={currentPath === "contact" ? "text-black" : ""} href={new URL(baseUrl + '/contact', Astro.url).pathname}>Contact</a>
					</div>

					<div class="flex md:hidden">
						<Bars3Icon id="menu-open" className="h-6 w-6 text-black "  />
					</div>

					<div class="flex grow items-center justify-center">
						<p class="text-xl">Talulla Bowyer</p>
					</div>
					<div class="hidden w-1/3 items-center justify-end space-x-4 text-sm text-gray-500 md:flex">
						<a href={facebookUrl}>Facebook</a>
						<a href={instagramUrl}>Instagram</a>
						<a href={emailLink}>Email</a>
					</div>
				</div>
				

			</header>
			<main class="grow">
				<slot />
			</main>
			<footer class="bottom-0 z-40 flex w-full items-center justify-center p-4">
				<p>Â© Talulla Bowyer</p>
			</footer>
		</div>
	</body>
</html>

<script>
  const menuOpen = document.getElementById('menu-open');
  const menuClose = document.getElementById('menu-close');
  const mainContainer = document.getElementById('main-container');
  const mobileMenu = document.getElementById('mobile-menu');

  menuOpen.addEventListener('click', () => {
    mobileMenu.classList.remove('hidden');
	mainContainer.classList.add('stop-scroll')
  });

  menuClose.addEventListener('click', () => {
    mobileMenu.classList.add('hidden');
	mainContainer.classList.remove('stop-scroll')
  });
</script>
